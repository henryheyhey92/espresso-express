{{#extends 'base'}}

{{#block 'content'}}
<h1>Deleting {{users.first_name}} {{users.last_name}}</h1>

<form method="POST">
    <div class="alert alert-danger">
        <p>Are you sure you want to delete {{users.first_name}} {{users.last_name}}?</p>
        <input type="submit" class="btn btn-danger" value="Yes"/>
        <a href="/users" class="btn btn-success">No</a>
    </div>
</form>
{{/block}}
{{/extends}}