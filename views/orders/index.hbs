{{#extends 'base'}}
{{#block 'content'}}
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product_name</th>
            <th>Purchaser_name</th>
            <th>Order_date</th>
            <th>Status</th>
            <th>Shipping Address</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        {{#each orders}}
            <tr>
                <td>
                    {{this.id}}
                </td>
                <td>
                    {{this.product_name}}
                </td>
                <td>
                    {{this.purchaser_name}}
                </td>
                <td class="overflow-auto" style="width: 300px;">
                    {{this.order_date}}
                </td>
                <td>
                    {{this.status}}
                </td>
                <td>
                    {{this.shipping_address}}
                </td>
                <td>
                    {{this.quantity}}
                </td>
            </tr>
        {{/each}}
    </tbody>

</table>
{{/block}}
{{/extends}}