{{#extends 'base'}}

{{#block 'content'}}
<h1>Update Product status: {{orders.product_name}}</h1>
<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
    {{{form}}}
  
    <div style="display: inline-block;" class="mt-2">
        <input type="submit" value="Update order status" class="btn btn-primary" />
    </div>
</form>
{{/block}}

{{/extends}}